{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "svelte3"
    ],
    "overrides": [
        {
            "files": ["*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "rules": {
        "linebreak-style": 0,
        "no-console": "off",
        "one-var-declaration-per-line": ["error", "initializations"],
        "import/no-mutable-exports": "off",
        "import/prefer-default-export": "off",
        "semi": [2, "always"],
        "no-return-assign": 0,
        "arrow-parens": ["warn", "as-needed"]
    }
}
